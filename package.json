{
  "name": "gestionando",
  "version": "1.0.1",
  "description": "Aplicación de gestión para afiliados y fichas.",
  "main": "main.js",
  "author": "Tobias Pazos",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "electron-updater": "^6.3.9",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15"
  },
  "build": {
    "appId": "com.tobiaspazos.gestionando",
    "productName": "Gestionando",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.cache/**/*",
      "!out/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "tobi379",
      "repo": "gestion",
      "releaseType": "release"
    }
  }
}
